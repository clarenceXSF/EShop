<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>风御轩EShop</title>
    <meta name="description" content="这里是风御轩网上书店">
    <meta name="keywords" content="EShop">
    <link rel="icon" type="image/png" href="../../Images/favicon.ico">
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <link rel="stylesheet" type="text/css" href="~/Css/comm/head.css">
    <script src="~/js/front/index/index.js"></script>
    @{
        var loginName = Session["loginName"] as string;
    }
    <!--登录条-->
    <div id="loginbar">
        <div class="wit">
            <ul class="fleft">
                <li class="dropdown" id="tbar-login">
                    <iframe src="" id="loginMake" scrolling="no" frameborder="0" height="0" width="0"> </iframe>
                    <div class="quick-link">
                        @{
                            if (string.IsNullOrEmpty(@loginName)) { 
                                <span class="child-node">欢迎光临!</span>
                                <span id="logReg">
                                    <a class="child-node" rel="nofollow" href="~/Account/UserIndex" style="color:red;">请登录/注册</a>
                                </span>
                            }
                            else
                            {
                                <span class="child-node" style="color:green;">欢迎您，@loginName</span>
                                <span id="logLoginOn">
                                    <a class="child-node" rel="nofollow" href="~/UserAdmin/Index">会员中心</a>
                                    <a class="child-node child-out" id="loginOut">退出</a>
                                </span>
                            }
                        }
                    </div>
                </li>
            </ul>
            <ul class="fright">
                <li class="fore1" id="tbar-light">
                    <div class="dt cw-icon wdzh">
                        <a href="~/UserAdmin/Index">我的账户</a>
                        <b class="abc" style="opacity:1"></b>
                        <div class="show-drop my-lgt">
                            <ul>
                                <li><a target="_blank">我的订单</a></li>
                                <li><a target="_blank">账户余额</a></li>
                                <li><a target="_blank">个人资料</a></li>
                                <li><a target="_blank">我的消息</a></li>@*通知发货*@
                            </ul>
                        </div>

                    </div>
                </li>
                <li class="fore2" id="ttbar-mycar">
                    <div class="dt cw-icon"> <i class="ci-mycar"></i> <a>我的购物车</a> </div>
                </li>
                <li class="fore3" id="ttbar-online">
                    <div class="dt"> <a href="javascript:void(0)">客服在线</a> </div>
                </li>
                <li class="fore4" id="tbar-website">
                    <div class="dt cw-icon wdzh">
                        <a href="javascript:void(0)">网站导航</a>
                        <b class="abc" style="opacity:1"></b>
                        <div class="show-drop s-nvg">
                            <ul>
                                <li><a>热门搜索</a></li>
                                <li><a>图书类型</a></li>
                                <li><a>店长推荐</a></li>
                                <li><a>新书上架</a></li>
                                <li><a>畅销书籍</a></li>
                                <li><a>优秀作者</a></li>
                                <li><a href="~/Account/Index">后台管理</a></li>
                            </ul>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>

    <!--头部logo和搜索-->
    <div class="headebar">
        <div class="wit">
            <!--左logo-->
            <div id="logo-light"> <a href="#"><img src="~/Images/header/headLogo.png" height="50" alt="前台logo(风御轩EShop)" /></a> </div>
            <!--右边搜索框-->
            <div id="right_search">
                <div class="form">
                    <form action="#" method="post" target="_blank">
                        <input type="text" name="keyword" />
                        <button class="button cw-icon"><i></i>搜索</button>
                    </form>
                </div>
            </div>
            <div id="hotwords">
                <a href="#">热搜01</a>
                <a href="#">热搜02</a>
                <a href="#">热搜03</a>
                <a href="#">热搜04</a>
                <a href="#">热搜05</a>
                <a href="#">热搜06</a>
                <a href="#">热搜07</a>
                <a href="#">热搜08</a>
                <a href="#">热搜09</a>
                <a href="#">热搜10</a>
            </div>
            <!--导航栏-->
            <div id="nav">
                <div class="wit">
                    <div class="categorys">
                        <div class="dt"> <i class="categorys_icon"><img src="~/Images/header/categorys_icon.png" width="25" height="25" alt="" /></i> <a href="#">全部分类</a> </div>
                    </div>
                    <div id="navitems">
                        <ul id="navitems-group">
                            <li> <a href="/">首页</a></li>
                            <li> <a href="~/GoodsShow/Index">导购</a></li>@*分类搜索页面*@
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="wit-spac"></div>

    <!--中间区域-->
    @RenderBody()

