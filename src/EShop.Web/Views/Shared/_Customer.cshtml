                        <li><a href="~/Account/Index">后台管理</a></li>
                    </ul>
                </div>
                <div style="width: 1190px;margin: 0 auto;float: left;">
                    <div style="padding: 0 30%;">
                        <span style="text-align:center;font-family:tahoma, arial, 宋体;white-space:normal;color:#666666;">&copy;  2016  13ACCP2  CLARENCE_FENG  版权所有  0104130235</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @RenderSection("scripts", required: false)
